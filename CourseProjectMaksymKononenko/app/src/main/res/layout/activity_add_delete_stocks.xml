<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddDeleteStocks"
    android:background="@color/colorBlack">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/add_delete_activity_edittext"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/add_delete_activity_stock_name"
            android:inputType="textPersonName"
            android:textColor="@color/colorLightGrey"
            android:textColorHint="@color/colorLightGrey" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_add_24"
            android:onClick="addStockToDb" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_baseline_remove_24"
            android:onClick="removeStockItem" />
    </LinearLayout>

    <ListView
        android:id="@+id/add_delete_activity_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>